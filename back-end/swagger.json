    "paths": {
      "/users/login": {
        "post": {
          "tags": [
            "user"
          ],
          "summary": "Logs in user",
          "description": "",
          "parameters": [
            {
              "name": "username",
              "in": "body",
              "description": "The user name for login",
              "required": true,
              "type": "string"
            },
            {
              "name": "password",
              "in": "body",
              "description": "The password for the login",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "success",
              "headers": {
                "token": {
                  "type": "string",
                  "description": "auth token for this user"
                }
              }
            },
            "400": {
              "description": "Invalid username or password"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/user/register": {
        "post": {
          "tags": [
            "user"
          ],
          "summary": "Logs in user",
          "description": "",
          "parameters": [
            {
              "name": "username",
              "in": "body",
              "description": "The user name for login",
              "required": true,
              "type": "string"
            },
            {
              "name": "password",
              "in": "body",
              "description": "The password for the login",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "successful operation",
              "headers": {
                "token": {
                  "type": "string",
                  "description": "auth token for this user"
                }
              }
            },
            "400": {
              "description": "Invalid username/password supplied"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    },
