        "responses": {
          "200": {
            "description": "success",
            "headers": {
              "token": {
                "type": "string",
                "description": "JWT token for the user"
              }
            }
          },
          "400": {
            "description": "Invalid username or password"
          },
          "500": {
            "description": "Internal server error"
          },
          "404": {
            "description": "User was not found in records"
